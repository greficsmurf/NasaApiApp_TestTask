<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaApiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/light_blue</item>
        <item name="colorOnBackground">@color/blue</item>
        <item name="android:colorBackground">@color/dark_blue</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
        <item name="progressIndicatorStyle">@style/Theme.StackExchange.ProgressIndicator</item>
        <item name="materialCardViewStyle">@style/Theme.StackExchange.CardView</item>
        <item name="iconColor">@color/white</item>
    </style>

    <style name="Theme.StackExchange.ProgressIndicator" parent="Widget.MaterialComponents.ProgressIndicator.Linear.Indeterminate">
        <item name="indicatorColor">@color/purple_700</item>
    </style>
    <style name="Theme.StackExchange.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="background">@color/blue</item>
    </style>
</resources>